<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width">
<style type="text/css">
  body {
    margin: 0;
  }

  header {
    font: 12px "Lucida Grande", sans-serif;
    border-bottom: 1px solid #ddd;
    padding: 0.5em;
    overflow: visible;
  }

  header dt {
    width: 80px;
    float: left;
    clear: left;
    text-align: right;
    color: #7f7f7f;
    padding: 1px;
  }

  header dd {
    margin-left: 90px;
    padding: 1px;
  }

  .plain {
    padding: 1em;
  }
</style>
</head>
<body>
<header>
  <dl>
  <% headers.each do |header| %>
    <dt><%= header.name %>:</dt>
    <dd><%= header.to_s %></dd>
  <% end %>
    <dt>Format</dt>
    <dd>
      <select name="content-type">
        <% if mail.parts.any? { |part| part.content_type == "text/plain" } %>
        <option value="text/plain">Plain</option>
        <% end %>

        <% if mail.parts.any? { |part| part.content_type == "text/html" } %>
        <option value="text/html">HTML</option>
        <% end %>
      </select>
    </dd>
  </dl>
</header>
<iframe class="body"></iframe>
<script>
const select = document.querySelector('select[name="content-type"]')
const iframe = document.querySelector('iframe.body')

select.addEventListener('change', (e) => {
  let contentType = e.currentTarget.value

  iframe.src = `${window.location.pathname}?content-type=${contentType}`
}, false)
</script>
</body>
</html>
